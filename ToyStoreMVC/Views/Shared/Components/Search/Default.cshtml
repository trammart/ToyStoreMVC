<!--selected opition and add name input search-->
<script>
	$.urlParam = function (name) {
		var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
		if (results == null) {
			return null;
		}
		return decodeURI(results[1]);
	}
	var categoryId = $.urlParam('categoryId');
	var nameSearch = $.urlParam('productName');

	if (categoryId != null) {
		$("#mySelectBox").val(categoryId).change();
	}
	if (nameSearch != null) {
		$("#myInputSearch").val(nameSearch.split('+').join(' '));
	}
</script>
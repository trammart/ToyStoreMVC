
@{
    ViewData["Title"] = "Nhà bán hàng";
    Layout = "_Layout.cshtml";
    ViewData["ActivePage"] = ManageNavPages.Company;
}

<br />
<div class="row">
    <div class="col-10">
        <h2 class="text-primary">Danh sách nhà bán hàng </h2>
    </div>
    <div class="col-2 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Tạo Mới</a>
    </div>
</div>

<br />
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-info">
                    <tr>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>SĐT</th>
                        <th>Huyện</th>
                        <th>Thành Phố</th>
                        <th>Là nhà bán hàng</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}

@{
    Layout = "_Layout.cshtml";
    ViewData["ActivePage"] = ManageNavPages.Product;
    ViewData["Title"] = "Sản phẩm";
}


<br />
<div class="row">
    <div class="col-8">
        <h2 class="text-primary">Danh sách sản phẩm </h2>
    </div>
    <div class="col-2 text-right">
        <a class="btn btn-info text-white" onclick="location.href='@Url.Action("ExportToExcel", "Product")'"><i class="fas  fa-file-export"></i> &nbsp;Xuất Excel</a>
    </div>
    <div class="col-2 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Tạo Mới</a>
    </div>
</div>

<br />
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-info">
                    <tr>
                        <th>STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Mô tả</th>
                        <th>Loại sản phẩm</th>
                        <th>Thương hiệu</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}